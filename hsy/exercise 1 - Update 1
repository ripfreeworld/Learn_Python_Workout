import random
x=random.randint(0,100)
a=input("please guess a number between 0 and 100: ")
y=int (a)
i=1
while i<3:
    if y<x:
        print("Too low")
        y=int(input("Please try again: "))
        i+=1
    if y>x:
        print("Too high")
        y=int(input("Please try again: "))
        i+=1
    if y==x:
        print("Just right")
        exit()
else:
    print("sorry, run out of times")
    exit()
